<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nivellGlobal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="100dp">

    <LinearLayout
        android:id="@+id/nivell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imgResource"
            android:layout_width="104dp"
            android:layout_height="109dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="1.0"></pl.droidsonroids.gif.GifImageView>

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="107dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mundo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvTitol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNpreguntes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgStarTwo"
                android:layout_width="39dp"
                android:layout_height="29dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/imgStarThree"
                android:layout_width="39dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"

                android:adjustViewBounds="false"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imgStarOne"
                android:layout_width="39dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:scaleType="centerInside" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>